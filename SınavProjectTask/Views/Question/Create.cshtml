@model CreateQuestionViewModel


@{

}



<div class="main-container">
    <section class="space-sm">
        <div class="container">
        
            <div class="row flex-md-row card card-md">
                <div class="card-body bg-light">
                    <div class="text-center mb-5">
                        <h1 class="h2 mb-2">Create a new Question</h1>
                        <span>E-learning </span>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-6 col-lg-5">
                            <form method="post" asp-action="Create" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label class="mt-2" for="questionContent">Question Content:</label>
                                    <textarea asp-for="QuestionContent" class="form-control" placeholder="Enter question content" ></textarea>
                                    <span asp-validation-for="QuestionContent" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label class="mt-2" for="optionType">Question Type:</label>
                                    <select asp-for="OptionType" asp-items="@Html.GetEnumSelectList<OptionType>()" class="form-control">
                                        <option>--Select--</option>
                                    </select>
                                    <span asp-validation-for="OptionType" class="text-danger"></span>
                                </div>

                                <div class="form-row mb-2 mt-2 form-group">
                                    <label class="mt-2">Choose Category:</label>
                                        <select class="form-select" asp-for="QuestionCategoryId">
                                        <option value="@Guid.Empty" selected>Chose exam category</option>
                                            @foreach (var item in Model.QuestionCategories)
                                            {
                                                <option value="@item.Id">@item.QuestionCategoryName </option>
                                            }
                                        </select>
                                        <span asp-validation-for="QuestionCategoryId" class="text-danger"></span>
            
                                </div>

                                <div class="form-group">
                                    <label class="mt-2" for="correctOptionId">Correct Option </label>
                                    <input asp-for="CorrectOptionId" type="text" class="form-control" placeholder="Enter correct option ID">
                                    <span asp-validation-for="CorrectOptionId" class="text-danger"></span>
                                </div>
                     

                         

                               
                                <button type="submit" class="btn btn-success">Submit</button>
                            </form>

                         
                        </div>
                    </div>

                </div>
            </div>
        </div>
        
    </section>

</div>