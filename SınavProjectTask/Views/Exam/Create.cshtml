@{
}

<div class="navbar-container">
</div>
<div class="main-container">
    <section class="space-sm">
        <div class="container">
            <div class="row mb-5">
                <!--end of col-->
            </div>
            <!--end of row-->
            <div class="row flex-md-row card card-md">
                <div class="card-body bg-light">
                    <div class="text-center mb-5">
                        <h1 class="h2 mb-2">Create Exam</h1>
                        <span>E-learning </span>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-6 col-lg-5">
                            <form method="post" asp-action="Create" enctype="multipart/form-data">
                                <input type="hidden" id="AppUserId" name="AppUserId" asp-for="CategoryId" />

                                <div class="form-row form-group">
                                    <div class="col mb-2">
                                        <input asp-for="ExamName" class="form-control form-control-lg" placeholder="Name" />
                                        <span asp-validation-for="ExamName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row mb-2 form-group">
                                    <div class="col">
                                        <input asp-for="MaximumTime" class="form-control form-control-lg" placeholder="Minute" />
                                        <span asp-validation-for="MaximumTime" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row mb-2 form-group">
                                    <div class="col">
                                        <!-- Changed input to textarea for Description -->
                                        <textarea asp-for="Description" class="form-control form-control-lg" placeholder="Description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </form>

                          
                        </div>
                    </div>
                    <div class="mt-3 float-end">
                        <div class="col">
                            <button class="btn btn-block btn-success btn-lg" type="submit">Start to add Questions</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
</div>
