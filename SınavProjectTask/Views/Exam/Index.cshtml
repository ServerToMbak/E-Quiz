@model IndexExamViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="mt-3 mb-3 float-end">
        
                <a href="Exam/Create" class="btn btn-block btn-outline-primary btn-lg px-3" type="submit">Add Exam</a>
            </div>
        </div>
    </div>
    @if(Model.Exams == null)
    {
        <h3>You have no exams you can click button to add bew exam</h3>
    }
    <div class="row">
        @foreach(var item in Model.Exams)
        {

            <div class="card mb-5 mx-2" style="width: 18rem;">
              <div class="card-body">
                    <h5 class="card-title">Exam Name: @item.ExamName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Exam takes: @item.MaximumTime minutes</h6>
                    <p class="card-text">@item.Description</p>
                    <span class="card-link">Success Point is: @item.SuccessPoint</span>
                <a href="#" class="card-link">Details</a>
              </div>
            </div>
        }
    </div>
    <div class="text-start text-info">

        <h4>You have @Model.Count exam on the system </h4>
    </div>
   
</div>
